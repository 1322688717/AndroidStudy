<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/calendar_bg"
        app:layout_constraintTop_toTopOf="parent" />


    <com.necer.view.WeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/miui10Calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.necer.calendar.Miui10Calendar
        android:id="@+id/miui10Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:defaultCheckedLunarTextColor="#FF7B7B"
        app:defaultCheckedSolarTextColor="#FF7B7B"
        app:defaultUnCheckedLunarTextColor="@color/white"
        app:defaultUnCheckedSolarTextColor="@color/white"
        app:todayUnCheckedSolarTextColor="#FFCD1A"
        app:todayUnCheckedLunarTextColor="#FFCD1A"
        app:todayCheckedSolarTextColor="#FFCD1A"
        app:todayCheckedLunarTextColor="#FFCD1A"
        app:todayCheckedBackground="@drawable/todaycheckedbackground_bg"
        app:defaultCheckedBackground="@drawable/todaycheckedbackground_bg"
        app:calendarBackground="@color/calendar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.necer.calendar.Miui10Calendar>





</androidx.constraintlayout.widget.ConstraintLayout>